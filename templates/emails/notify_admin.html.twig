        body,
        html, 
        .body {
            background: #f3f3f3 !important;
        }

        .container.header {
            background: #f3f3f3;
        }

        .body-border {
            border-top: 8px solid #663399;
        }

        .name, .email {
            color: #663399
        }
    </style>

    <spacer size="16"></spacer>

