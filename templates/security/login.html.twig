{% extends 'base.html.twig' %}

{% block title %}{{ 'Connexion' }}{% endblock %}


{% block body %}
    <div class="container h-100">
    <div class="row align-items-center justify-content-center h-screen">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">{{ 'Connexion' }}</div>
                <div class="card-body">
                    {% block login_form %}
                        <form method="POST" action="{{ path('admin_login') }}">
                            {% if error %}
                                <div class="alert alert-danger" role="alert">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="row mb-3">
                                <label for="email" class="col-md-4 col-form-label text-md-end">{{ 'Email' }} :</label>
                                <div class="col-md-6">
                                    <input id="email" type="email" class="form-control border border-black-50" name="email" value="{{ last_email }}" required autocomplete="email" autofocus>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="password" class="col-md-4 col-form-label text-md-end">{{ 'Mot de passe' }} :</label>
                                <div class="col-md-6">
                                    <input id="password" type="password" class="form-control border border-black-50" name="password" required autocomplete="current-password">
                                </div>
                            </div>
                            
                            <div class="row mb-0">
                                <div class="col-md-8 offset-md-4">
                                    <button type="submit" class="btn btn-primary">{{ 'Se connecter' }}</button>
                                </div>
                            </div>
                        </form>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

