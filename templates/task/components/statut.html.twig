<div class="d-flex justify-content-around">
    {% if (row.isOwner) %}
        <form action="{{ path('task_update', {'task': row.id}) }}" method="POST">
            <button class="bg-transparent border-0">
                {% if (value) %}
                    <i class="fas fa-check-square text-success"></i>
                {% else %}
                    <i class="far fa-check-square text-gray"></i>
                {% endif %}
            </button>
        </form>
    {% else %}
        {% if (value) %}
            <i class="fas fa-check-square text-success"></i>
        {% else %}
            <i class="far fa-check-square text-gray"></i>
        {% endif %}
    {% endif %}
</div>